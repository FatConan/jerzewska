{
    "sites": [
        {
            "root": ".",
            "pages": [
               {
                    "source": "pages/*.md",
                    "target": "./*.html"
                },
                {
                    "source": "pages/errors/*.md",
                    "target": "./*.shtml"
                },
                {
                    "source": "pages/portfolio/*.md",
                    "target": "./portfolio/*.html"
                }
            ],
            "templates": [
                "templates"
            ],
            "resources": [
                {
                    "source": "resources/favicon.ico",
                    "target": "./favicon.ico"
                },
                {
                    "source": "resources/error/401.jpg",
                    "target": "./401.jpg"
                },
                {
                    "source": "resources/error/403.jpg",
                    "target": "./403.jpg"
                },
                {
                    "source": "resources/error/404.jpg",
                    "target": "./404.jpg"
                },
                {
                    "source": "resources/error/500.jpg",
                    "target": "./500.jpg"
                },
                {
                    "source": "resources/img",
                    "target": "./resources/img"
                },
                {
                    "source": "resources/javascript",
                    "target": "./resources/javascript"
                },
                {
                    "source": "resources/css/*.css",
                    "target": "./resources/css/*.css"
                },
                {
                    "source": "resources/css/base.less",
                    "target": "./resources/css/base.css",
                    "resource_type": "less"
                },
                {
                    "source": "resources/css/cms.less",
                    "target": "./resources/css/cms.css",
                    "resource_type": "less"
                }
            ]
        }
    ]
}
